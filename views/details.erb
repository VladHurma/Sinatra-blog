<h4>Post details:</h4>
<p>
	<br>
	<%= @row['content'] %>
	<br><br>
	Added at <%= @row['created_date'] %>
	<br><br>
</p>

<h4>Comments:</h4>
<p>
	<br>
	<% @comments.each do |comment| %>
		<%= comment['content'] %>
		<br>
		<span style="font-size: 75%; color: #999">Added at <%= comment['created_date'] %></span>
		<hr>
	<% end %>
</p>
<p>
	<form action="/post/<%= @row['id'] %>" method="POST" role="form">
	  <textarea name="content" class="form-control" rows="6" placeholder="Comment text"></textarea><br>
	  <button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>